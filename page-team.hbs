{{!< default}}

{{!-- This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. --}}

{{!-- Everything inside the #post tags pulls data from the page --}}
{{#post}}

<header class="main-header {{#if image}}" style="background-image: url({{image}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{@blog.title}}" /></a>{{/if}}
        {{#if @blog.navigation}}
            <a class="menu-button icon-menu" href="#"><span class="word">Menu</span></a>
        {{/if}}
    </nav>

    <div class="main-header-content">
        <h1 class="page-title">{{@blog.title}}</h1>
        <h2 class="page-description">{{@blog.description}}</h2>
    </div>
</header>

<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
          {{content}}

          <div class="help_box">Choose 2 countries from each column - you'll score 4 points for each gold medal they win, 2 for each silver, 1 for each bronze, plus their fixed points <emph>handicap</emph>.</div>

          <form id="countriesCheckBoxes" name="countriesCheckBoxes">
            <div class="imp-team"></div>
            <label for="teamName">Your team name</label>
            <input type="text" size="32" maxlength="32" id="teamName" name="teamName" value=""/>
            <label for="userName">Your name (public)</label>
            <input type="text" size="32" maxlength="32" id="userName" name="userName" value=""/>
            <button type="button" onclick="return impromptu.createTeam()">Submit</button>
            <div class="error"</div>
          </form>
        </section>

    </article>
</main>
{{/post}}
