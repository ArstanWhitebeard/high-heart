{
  "name": "HighHeart",
  "version": "0.0.1",
  "dependencies": {
    "isotope-layout": "^3.0.0"
  },
  "scripts": {
    "postinstall": "cp node_modules/isotope-layout/dist/isotope.pkgd.min.js assets/js/isotope.pkgd.min.js; npm run build-css",
    "build-css": "node ./node_modules/node-sass/bin/node-sass assets/scss -o assets/css",
    "watch-css": "node ./node_modules/node-sass/bin/node-sass -w assets/scss -o assets/css"
  },
  "devDependencies": {
    "node-sass": "^3.7.0"
  }
}
